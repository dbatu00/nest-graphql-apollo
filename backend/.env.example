# Backend runtime environment (local development)

# App
NODE_ENV=development
PORT=3000

# Auth
# Generate a long random string for real usage.
JWT_SECRET=replace-with-a-long-random-secret
JWT_EXPIRES_IN=15m

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=replace-with-your-postgres-password
DB_NAME=nest_graphql

# TypeORM safety
# true in local development, false in production
DB_SYNCHRONIZE=true

# CORS allowlist (comma-separated)
CORS_ORIGINS=http://localhost:19006,http://localhost:8081,http://localhost:3000
