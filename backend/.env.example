# Backend runtime environment (local development)

# App
NODE_ENV=development
PORT=3000

# Auth
# Generate a long random string for real usage.
JWT_SECRET=replace-with-a-long-random-secret
JWT_EXPIRES_IN=15m

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=replace-with-your-postgres-password
DB_NAME=nest_graphql

# TypeORM safety
# true in local development, false in production
DB_SYNCHRONIZE=true

# CORS allowlist (comma-separated)
CORS_ORIGINS=http://localhost:19006,http://localhost:8081,http://localhost:3000

# GraphQL guardrails
GRAPHQL_MAX_DEPTH=8

# Global rate limiting
# ttl is in milliseconds
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=120

# App base URL used in verification emails
APP_BASE_URL=http://localhost:3000

# Verification email delivery (SMTP)
# For local testing with MailHog:
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_SECURE=false
# EMAIL_FROM=no-reply@local.dev
SMTP_HOST=
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
EMAIL_FROM=no-reply@local.dev

# Verification token lifetime in seconds
# Use 86400 (24h) normally; set to 10 temporarily for local expiry testing.
EMAIL_VERIFICATION_TOKEN_TTL_SECONDS=86400

# Verification resend throttling
EMAIL_VERIFICATION_RESEND_COOLDOWN_MS=60000
EMAIL_VERIFICATION_RESEND_MAX_PER_HOUR=5
